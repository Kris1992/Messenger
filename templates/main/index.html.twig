<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="description" content="Messenger"/>
        <meta name="keywords" content="Messenger"/>
        <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1"/>
        <meta name="author" content="KrakovDev01">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"/>
        
        <title>{% block title %}Messenger{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            {{ encore_entry_link_tags('homepage') }}
        {% endblock %}
    </head>
    <body>
        <div class="container-fluid">
            <main>
                <div class="row" id="waves-bar">
                    <div class="col-5 m-auto rounded border border-white text-center py-3" id="react-homepage">
                    </div>

                    <div class="wave wave1"></div>
                    <div class="wave wave2"></div>
                    <div class="wave wave3"></div>
                    <div class="wave wave4"></div>
                </div>
            </main>
        </div>
        {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
        {{ encore_entry_script_tags('homepage_react') }}
        {% endblock %}
    </body>
</html>

